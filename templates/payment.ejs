        body {
            background: url('https://img.freepik.com/premium-vector/luxury-bright-red-lines-modern-sport-background_125759-132.jpg') center center/cover;
            background-attachment: fixed;
        }

        #page {
            height: auto;
            min-height: 50vh;
            display: flex;
            width: 100% !important;
            justify-content: center;
            align-items: center;
            background-color: rgb(0, 0, 0, 0.3);
        }

        .contiu {
            width: 33%;
            display: flex;
            flex-direction: column;
            overflow-y: scroll;
            height: 315px;
        }

        .contiu::-webkit-scrollbar {
            display: none;
        }

        .conti {
            width: 30%;
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        .leaderboard {
            max-width: 490px;
            width: 100%;
            border-radius: 12px;
        }




        .leaderboard__profiles {
            background-color: rgb(182, 14, 46);
            border-radius: 0 0 12px 12px;
            padding: 15px 15px 20px;
            display: grid;
            row-gap: 8px;
        }

        .leaderboard__profile {
            display: grid;
            grid-template-columns: 1fr 3fr 1fr;
            align-items: center;
            padding: 7px 30px 7px 7px;
            overflow: hidden;
            border-radius: 10px;
            margin-bottom: 10px;

            cursor: pointer;
            transition: transform 0.25s cubic-bezier(0.7, 0.98, 0.86, 0.98), box-shadow 0.25s cubic-bezier(0.7, 0.98, 0.86, 0.98);
            background-color: #fff;
        }

        .leaderboard__profile:hover {
            transform: scale(1.05);
            transition: all 0.2s;
        }

        .leaderboard__picture {
            width: 100% !important;
            height: 100% !important;
            background-size: cover !important;
            border-radius: 50%;
            box-shadow: 0 0 0 500px rgb(182, 14, 46), 0 0 0 100px rgb(182, 14, 46);
        }

        .leaderboard__name {
            color: white;
            text-transform: uppercase;
            font-size: 20px;
            margin-left: 12px;
        }

        .leaderboard__value {
            color: white;
            font-size: 20px;
            text-align: right;
        }

        .leaderboard__value>span {
            opacity: 0.8;
            font-weight: 600;
            font-size: 13px;
            margin-left: 3px;
        }

